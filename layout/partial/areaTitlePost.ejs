<div class='area-title <%- page.synopsis == null && 'min' %>'>
    <h1 class='title'><%- page.title %></h1>

    <p class='description'><%- page.synopsis %></p>

    <div class='post-details'>
        <% if(page.categories.length > 0) { %>
            <div class='group'>
                <span class='info'><%- __('category') %>: </span>
                
                <a class='post-category' href='<%- url_for(page.categories.first().path) %>'>
                    <%- titlecase(page.categories.first().name) %>
                </a>
            </div>
        <% } %>

        <div class='group'>
            <span class='info'><%- __('date') %>: </span>
            <span class='date'><%- date(page.date, config.date_format) %></span>
        </div>

        <div class='group'>
            <span class='info'>Tags:</span>

            <% page.tags.each(tag => { %>
                <a href='<%- url_for(tag.path) %>' class='post-tag'><%- titlecase(tag.name) %></a>
            <% }) %>
        </div>
    </div>
</div>

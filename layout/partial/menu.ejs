<input id='input-menu' type='checkbox' hidden />

<label for='input-menu' role='button' aria-label='Menu' class='menu-button'>
    <i class='icon-menu'></i>
    <i class='icon-close'></i>
</label>

<header class='menu'>
    <label for='input-menu' class='menu-close' tabindex='-1' aria-hidden='true'></label>

    <nav role='navigation'>
        <div class='area-logo' aria-hidden='true'>
            <div class='logo'>
                <img src='<%- url_for(theme.logo) %>'>
            </div>

            <p class='title'><%- config.title %></p>
        </div>
        <ul>
            <li class='link'>
                <a href='<%- url_for('/') %>' class='first-link <%- is_home() && 'selected' %>'>
                    <i class='icon-home'></i>
                    <%= __('home') %>
                </a>
            </li>

            <% if(!theme.noFaq) { %>
                <li class='link'>
                    <a href='/faq.html' class='<%- page.title == 'faq' && 'selected' %>'>
                        <i class='icon-faq'></i>
                        FAQ
                    </a>
                </li>
            <% } %>

            <li class='link'>
                <a href='/tags.html' class='<%- page.title == 'tags' && 'selected' %>'>
                    <i class='icon-tags'></i>
                    Tags
                </a>
            </li>

            <li class='link-group'>
                <i class='icon-down'></i> <%- titlecase(__('categories')) %>
            </li>

            <% site.categories.each(category => { %>
                <li class='link category'>
                    <a href='<%- url_for(category.path) %>' class='<%- page.category == category.name && 'selected' %>'>
                        <i class='icon-blog'></i>
                        <%- titlecase(category.name) %>
                    </a>
                </li>
            <% }) %>
            
        </ul>
    </nav>
</header>

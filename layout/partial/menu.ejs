<input id='menu' type='checkbox' hidden aria-hidden='true' tabindex='-1' />

<label for='menu' class='menu-button' aria-hidden='true' tabindex='-1'>
    <i class='icon-menu'></i>
    <i class='icon-close'></i>
</label>

<header class='menu'>
    <label for='menu' class='backdrop' aria-hidden='true' tabindex='-1'></label>

    <nav class='content'>
        <div class='area-logo' aria-hidden='true'>
            <div class='logo'>
                <img src='<%- url_for(theme.logo) %>'>
            </div>

            <p class='title'><%- config.title %></p>
        </div>

        <ul>
            <li>
                <a href='<%- url_for('/') %>' class='link <%- is_home() && 'selected' %>'>
                    <i class='icon-home'></i>
                    <%= __('home') %>
                </a>
            </li>

            <% if(!theme.noFaq) { %>
                <li>
                    <a href='/faq.html' class='link <%- page.title == 'faq' && 'selected' %>'>
                        <i class='icon-faq'></i>
                        FAQ
                    </a>
                </li>
            <% } %>

            <li>
                <a href='/tags.html' class='link <%- page.title == 'tags' && 'selected' %>'>
                    <i class='icon-tags'></i>
                    Tags
                </a>
            </li>

            <input id='categories' type='checkbox' hidden aria-hidden='true' tabindex='-1' checked />

            <label for='categories' aria-label='Menu' class='link' aria-hidden='true' tabindex='-1'>
                <i class='icon-down'></i> <%- __('categories') %>
            </label>

            <% site.categories.each(category => { %>
                <li class='categories-item'>
                    <a href='<%- url_for(category.path) %>' class='link group <%- page.category == category.name && 'selected' %>'>
                        <i class='icon-blog'></i>
                        <%- titlecase(category.name) %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </nav>
</header>

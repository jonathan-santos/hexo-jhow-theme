<main class='post'>
    <div class='area-title <%- page.synopsis == null ? 'min' : '' %>'>
        <h1 class='title'>
            <% if(page.part) { %>
                <%- page.title %>:
                <br>
                <%- __('part') %> <%- page.part %>
            <% } else { %>
                <%- page.title %>
            <% } %>
        </h1>

        <p class='description'><%- page.synopsis %></p>
        
        <div class='post-details'>
            <% if(page.categories.length > 0) { %>
                <div class='group'>
                    <span class='info'><%- __('category') %>: </span>
                    
                    <a class='post-category' href='<%- url_for(page.categories.first().path) %>'>
                        <%- titlecase(page.categories.first().name) %>
                    </a>
                </div>
            <% } %>

            <div class='group'>
                <span class='info'><%- __('date') %>: </span>
                <span class='date'><%- date(page.date, config.date_format) %></span>
            </div>

            <div class='group'>
                <span class='info'>Tags:</span>

                <% page.tags.each(tag => { %>
                    <a href='<%- url_for(tag.path) %>' class='post-tag'><%- titlecase(tag.name) %></a>
                <% }) %>
            </div>
        </div>
    </div>
    
    <div class='main-content'>

        <% if(page.numberOfParts) { %>
            <%- partial('partial/tableOfContents') %>
        <% } %>

        <%- page.content %>

        <% if(page.postMusicLink) { %>
            <div class='post-music'>
                <h3>
                    <i class='icon-music'></i>
                    <%- __('postMusic') %>
                </h3>

                <p><%- page.postMusicText %></p>

                <a href='<%- page.postMusicLink %>' target='_blank' rel='noreferrer'>
                    <%- __('hearIt') %>...
                </a>
            </div>
        <% } %>

        <% if(page.part && page.numberOfParts) { %>
            <div class='part-buttons'>
                <% if(Number(page.part) > 1) { %>
                    <a class='previous' href='../<%= page.part - 1 %>'><%- __('previous') %></a>
                <% } %>
        
                <% if(Number(page.part) < Number(page.numberOfParts)) { %>
                    <a class='next' href='../<%= page.part + 1 %>'><%- __('next') %></a>
                <% } %>
            </div>
        <% } %>
    </div>
</main>
